<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMauiDI.MainPage">

    <ScrollView>

        <VerticalStackLayout>

            <Label
                FontSize="30"
                HorizontalTextAlignment="Center"
                 TextColor="Red">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Login Status: "/>
                        <Span Text="{Binding Status}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Entry
                Text="{Binding UserName}"
                Margin="10,10"
                Placeholder="Enter user"/>

            <Entry
                Text="{Binding Pwd}"
                Margin="10,10"
                IsPassword="True"
                Placeholder="Enter Password"/>

            <Button
                Margin="40,20"
                Text="Login"
                Command="{Binding LoginCommand}"/>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>